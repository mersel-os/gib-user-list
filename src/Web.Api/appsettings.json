{
  "ConnectionStrings": {
    "DefaultConnection": ""
  },
  "GibEndpoints": {
    "PkListUrl": "https://merkeztest.gib.gov.tr/EFaturaMerkez/newUserPkListxml.zip",
    "GbListUrl": "https://merkeztest.gib.gov.tr/EFaturaMerkez/newUserGbListxml.zip",
    "BatchSize": 25000,
    "ChangeRetentionDays": 30,
    "MaxAllowedRemovalPercent": 10
  },
  "ArchiveStorage": {
    "Provider": "FileSystem",
    "BasePath": "/data/gib-archives",
    "RetentionDays": 7,
    "BucketName": "",
    "Region": "",
    "ServiceUrl": "",
    "AccessKey": "",
    "SecretKey": ""
  },
  "Caching": {
    "Provider": "Memory",
    "DefaultTtlMinutes": 60,
    "RedisInstanceName": "gibuserlist:",
    "RedisConnectionString": null
  },
  "Authentication": {
    "Enabled": false,
    "TimestampToleranceSeconds": 300,
    "Clients": []
  },
  "HealthChecks": {
    "MaxSyncStalenessHours": 24
  },
  "Webhooks": {
    "Enabled": false,
    "Slack": {
      "Enabled": false,
      "WebhookUrl": "",
      "Channel": "#gib-sync-alerts",
      "Username": "GIB Sync Bot",
      "NotifyOn": ["SyncFailed", "SyncPartial", "RemovalGuardTriggered", "MvRefreshFailed", "HealthStatusChanged"]
    },
    "Http": {
      "Enabled": false,
      "Url": "",
      "Secret": "",
      "TimeoutSeconds": 10,
      "NotifyOn": ["SyncCompleted", "SyncFailed", "SyncPartial", "RemovalGuardTriggered", "MvRefreshFailed", "HealthStatusChanged"]
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "Microsoft.EntityFrameworkCore": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    }
  }
}
